<%- include('../partials/simpleNav'); -%>

<div class="container max-w-full">
  <!--REGISTRAR PRODUCTO-->
  <div class="container ml-auto mr-auto">

    <h1 class="text-center text-4xl my-4">Registrar producto</h1>

    <form action="/almacen" method="post">
      <div class="flex flex-row m-8">
        <label class="ml-auto mr-auto" for="product_id">Id del producto</label>
        <input class="ml-auto mr-auto border-solid border-black" type="number" name="product_id" id="product_id">
      </div>
      <div class="flex flex-row m-8">
        <label class="ml-auto mr-auto" for="product_name">Nombre del producto</label>
        <input class="ml-auto mr-auto" type="text" name="product_name" id="product_name">
      </div>
      <div class="flex flex-row m-8">
        <label class="ml-auto mr-auto" for="product_price">Precio del producto</label>
        <input class="ml-auto mr-auto" type="number" name="product_price" id="product_price" step="0.01" min="0.01">
      </div>
      <div class="flex flex-row m-8">
        <label class="mx-4 ml-auto mr-auto" for="product_category">categoria del producto</label>
        <input class="mx-10 ml-auto mr-auto" type="text" name="product_category" id="product_category">
      </div>
      <div class="flex flex-row m-8">
        <label class="mx-4 ml-auto mr-auto" for="product_style">Estilo del producto</label>
        <input class="mx-16 ml-auto mr-auto" type="text" name="product_style" id="product_style">
      </div>
      <div class="flex flex-row m-8">
        <label class="mx-4 ml-auto mr-auto" for="product_desc">Descripcion del producto</label>
        <textarea class="mx-4 ml-auto mr-auto" name="product_desc" id="product_desc" cols="30" rows="10"></textarea>
      </div>

      <div class="flex flex-row m-8">
        <label class="mx-4 ml-auto mr-auto" for="image">Im√°gen: </label>
        <input class="mx-4 ml-auto mr-auto" type="file" name="image" required /> <br>
      </div>

      <div class="flex flex-row m-8">
        <button
          class="ml-auto mr-auto bg-blue-500 hover:bg-blue-400 text-white font-bold py-4 px-8 border-b-4 border-blue-700 hover:border-blue-500 rounded">
          Registrar producto
        </button>
      </div>

    </form>
  </div>
</div>

<!--BUSCAR PRODUCTO-->
