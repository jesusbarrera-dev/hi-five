  <div class="flex flex-column my-4">
    <div class="container mx-auto">
      <h1 class="text-center text-4xl my-4">Registrar usuario</h1>

      <form action="/admin" method="post">
        <div class="flex flex-row m-8">
          <label class="ml-auto mr-auto" for="user_id">Id del usuario</label>
          <input class="ml-auto mr-auto border-solid border-black" type="number" name="user_id" id="user_id">
        </div>
        <div class="flex flex-row m-8">
          <label class="ml-auto mr-auto" for="user_name">Nombre usuario</label>
          <input class="ml-auto mr-auto border-solid border-black" type="text" name="user_name" id="user_name">
        </div>
        <div class="flex flex-row m-8">
          <label class="ml-auto mr-auto" for="user_rol">Rol</label>
          <input class="ml-auto mr-auto border-solid border-black" type="text" name="user_rol" id="user_rol">
        </div>
        <div class="flex flex-row m-8">
          <label class="ml-auto mr-auto" for="user_email">Correo</label>
          <input class="ml-auto mr-auto border-solid border-black" type="email" name="user_email" id="user_email">
        </div>
        <div class="flex flex-row m-8">
          <label class="ml-auto mr-auto" for="user_password">Contrase√±a</label>
          <input class="ml-auto mr-auto border-solid border-black" type="password" name="user_password"
            id="user_password">
        </div>

        <div class="flex flex-row m-8">
          <button
            class="ml-auto mr-auto bg-blue-500 hover:bg-blue-400 text-white font-bold py-4 px-8 border-b-4 border-blue-700 hover:border-blue-500 rounded">
            Registrar usuario
          </button>
        </div>

      </form>
    </div>
  </div>

